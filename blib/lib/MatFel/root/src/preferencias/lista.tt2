            <a href="[% c.uri_for(c.controller.action_for('edit'), [preferencia.id]) %]" title='Editar'><img src="/static/images/pencil.png" alt="Editar" /></a>
        </td>
     </tr>
    [% END -%]
    </tbody>
 </table>
 </div>
