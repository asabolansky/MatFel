<VirtualHost *:80>
    PerlModule Tesis
    PerlOptions +Parent
    PerlSwitches -Mlib=/usr/local/tesis/desarrollo/lib

    <Location />
        SetHandler          modperl
        PerlResponseHandler Tesis
    </Location>

    ErrorLog /var/log/apache2/error.log
    LogLevel warn
    CustomLog /var/log/apache2/access.log combined

</VirtualHost>
